            { bg: 'library', speaker: 'Rohan', dialogue: "It's an earthquake! What's the safest thing to do right now?", choices: [{ text: "Drop, Cover, and Hold On under a table.", target: 4 }, { text: "Run for the main exit.", target: 11 }, { text: "Stand in a doorway.", target: 14 }], shake: true },
