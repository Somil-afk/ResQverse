            { bg: 'assemblyPoint', speaker: 'Congratulations!', dialogue: "You understood what to do before, during, and after an earthquake. You're a safety expert!", type: 'end' },
            // Page 55-57: Wrong paths for Q7
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "While the power might be out, it's not the most immediate life-threatening danger." },
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "A gas leak could cause an explosion, and structural damage could mean the house might collapse. These must be checked for first." },
            { bg: 'assemblyPoint', speaker: 'Safety Tip', dialogue: "What are the most serious and immediate dangers to check for?", choices: [{ text: "Try again", target: 44 }] },
            // Page 58-60: Wrong paths for Q7
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "The water supply might be off, but this is an inconvenience, not an immediate danger like a gas leak." },
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "Your first check should always be for dangers that could cause an explosion, fire, or collapse." },
            { bg: 'assemblyPoint', speaker: 'Safety Tip', dialogue: "What hazards could cause the most harm when re-entering a building?", choices: [{ text: "Try again", target: 44 }] },
            // Page 50-54: (Original wrong paths for Q5 renumbered)
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "NEVER re-enter a building after an earthquake until it has been inspected and declared safe by professionals." },
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "An aftershock could happen at any moment, causing more damage or trapping you inside." },
            { bg: 'assemblyPoint', speaker: 'Safety Tip', dialogue: "Your life is irreplaceable. What is the safe choice?", choices: [{ text: "Try again", target: 34 }] },
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "Firefighters and rescue workers are busy with life-saving priorities, like searching for injured people." },
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "They cannot risk their safety to retrieve personal belongings. You must wait until the building is declared safe for everyone." },
            { bg: 'assemblyPoint', speaker: 'Safety Tip', dialogue: "What should be your focus right now?", choices: [{ text: "Try again", target: 34 }] },
        ];


        // --- CORE GAME FUNCTIONS ---
        function startGame() {
            startScreen.style.display = 'none';
            gameContainer.style.display = 'block';
            renderScene();
        }

        // --- IMAGE LOADING ---
        function preloadImages() {
            const sources = Object.keys(imageSources);
            if (sources.length === 0) {
                imagesReady = true;
                return;
            }
            
            sources.forEach(name => {
                images[name] = new Image();
                images[name].onload = () => { 
                    loadedImagesCount++;
                    if (loadedImagesCount === sources.length) {
                        imagesReady = true;
                        // If user clicked start while images were loading, begin the game now.
                        if (startClicked) {
                            startGame();
                        }
                    }
                };
                images[name].src = imageSources[name];
            });
        }

        // --- Other Game Functions ---
        function drawPage() {
            const page = story[currentPage];
            ctx.clearRect(0, 0, canvas.width, canvas.height); // Clear canvas
            if (images[page.bg]) ctx.drawImage(images[page.bg], 0, 0, canvas.width, canvas.height);
        }

        function updateUI() {
            const page = story[currentPage];

            if (page.type === 'end') {
                showEndScreen();
                return;
            }

            dialogueBox.style.display = 'block';
            speakerName.textContent = page.speaker;
            dialogueText.textContent = page.dialogue; 
            
            gameContainer.classList.toggle('shake', !!page.shake);

            if (page.choices) {
                choicesContainer.style.display = 'flex';
                nextBtn.style.display = 'none';
                choiceButtons.forEach((button, index) => {
                    if (page.choices[index]) {
                        button.style.display = 'block';
                        button.textContent = page.choices[index].text;
                        button.onclick = () => { currentPage = page.choices[index].target; renderScene(); };
                    } else {
                        button.style.display = 'none';
                    }
                });
            } else {
                choicesContainer.style.display = 'none';
                nextBtn.style.display = (currentPage >= story.length - 1) ? 'none' : 'block';
            }
        }
        
        function renderScene() {
            if (currentPage >= story.length) currentPage = story.length - 1;
            drawPage();
            updateUI();
        }
        
        function showEndScreen() {
            gameContainer.style.display = 'none';
            endScreen.style.display = 'flex';
        }

        // --- EVENT LISTENERS ---
        startBtn.addEventListener('click', () => {
            startClicked = true;
            if (imagesReady) {
                startGame();
            } else {
                startBtn.disabled = true;
                startBtn.textContent = 'Loading...';
            }
        });

        nextBtn.addEventListener('click', () => {
            const page = story[currentPage];
            if (page.nextTarget !== undefined) {
                currentPage = page.nextTarget;
            } else if (currentPage < story.length - 1) {
                currentPage++;
            }
            renderScene();
        });

        restartBtn.addEventListener('click', () => {
            endScreen.style.display = 'none';
            gameContainer.style.display = 'block';
            currentPage = 0;
            renderScene();
        });

        // REMOVED: Old exit button listener

        // --- INITIALIZE ---
        // Start preloading images immediately when the script runs.
        preloadImages();
    </script>
</body>
</html>