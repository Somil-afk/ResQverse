            // Page 23: Correct Path 3
            { bg: 'library', speaker: 'Anika', dialogue: "Definitely the stairs. We'll hold the handrail and be careful of any cracks or fallen debris." },
            // Page 24: New Event
            { bg: 'assemblyPoint', speaker: 'Narrator', dialogue: "They safely exit the library and move towards an open field away from the building." },
            // Page 25: Question 4
            { bg: 'assemblyPoint', speaker: 'Rohan', dialogue: "We're outside. Where is the safest place to wait?", choices: [{ text: "In an open area, away from buildings and trees.", target: 32 }, { text: "Right next to the library wall, for shelter.", target: 35 }, { text: "Under a big, strong tree.", target: 38 }] },
