<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Earthquake Safety Adventure</title>
    <style>
        /* General page styling */
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #333;
            color: #333;
        }

        /* The main container for the game canvas and UI */
        #game-container {
            width: 800px;
            height: 600px;
            border: 5px solid #000;
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
            background-color: #fff;
            display: none; /* Hidden by default, shown after start */
        }

        /* Start and End Screen Styling */
        #start-screen, #end-screen {
            width: 800px;
            height: 600px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            background-color: #fff3e0;
            border: 5px solid #000;
            padding: 20px;
            box-sizing: border-box;
        }

        .game-title {
            font-size: 3.5em;
            margin-bottom: 20px;
            color: #e65100;
        }
        
        .game-subtitle {
            font-size: 1.5em;
            margin-bottom: 40px;
        }

        .action-btn {
            padding: 15px 30px;
            font-size: 1.5em;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            cursor: pointer;
            border: 3px solid #000;
            background-color: #fb8c00;
            color: white;
            border-radius: 12px;
            box-shadow: 4px 4px 0 #000;
            transition: all 0.1s ease-in-out;
        }

        .action-btn:hover {
            background-color: #e65100;
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 #000;
        }

        #end-screen .action-btn {
            background-color: #5cb85c;
        }
        #end-screen .action-btn:hover {
             background-color: #4cae4c;
        }


        /* The canvas where the comic panels are drawn */
        #game-canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }

        /* Dialogue box styling */
        #dialogue-box {
            position: absolute;
            bottom: 15px;
            left: 15px;
            right: 15px;
            background-color: rgba(255, 255, 255, 0.95);
            border: 4px solid #000;
            border-radius: 15px;
            padding: 15px 20px;
            z-index: 3;
            font-size: 1.3em;
            opacity: 1;
            transition: opacity 0.3s;
        }
        
        #speaker-name {
            font-weight: bold;
            margin-bottom: 5px;
            color: #e65100;
        }

        #dialogue-text {
            margin: 0;
        }

        /* Next button styling */
        #next-btn {
            position: absolute;
            bottom: 25px;
            right: 30px;
            padding: 10px 20px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            border: 3px solid #000;
            background-color: #fb8c00;
            color: white;
            border-radius: 10px;
            z-index: 4;
            box-shadow: 3px 3px 0 #000;
            transition: transform 0.1s, box-shadow 0.1s;
        }

        #next-btn:hover {
            transform: translate(1px, 1px);
            box-shadow: 2px 2px 0 #000;
        }

        /* Container for multiple choice questions */
        #choices-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 4;
            display: none; /* Hidden by default */
            flex-direction: column;
            gap: 15px;
            width: 80%;
            max-width: 450px;
        }

        .choice-btn {
            padding: 15px;
            font-size: 1.1em;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            cursor: pointer;
            background-color: #e65100;
            color: white;
            border: 3px solid #000;
            border-radius: 12px;
            box-shadow: 4px 4px 0 #000;
            transition: all 0.1s ease-in-out;
        }
        
        .choice-btn:hover {
            background-color: #fb8c00;
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 #000;
        }
        
        /* Shake animation for earthquake effect */
        @keyframes shake {
            0% { transform: translate(1px, 1px) rotate(0deg); }
            10% { transform: translate(-1px, -2px) rotate(-1deg); }
            20% { transform: translate(-3px, 0px) rotate(1deg); }
            30% { transform: translate(3px, 2px) rotate(0deg); }
            40% { transform: translate(1px, -1px) rotate(1deg); }
            50% { transform: translate(-1px, 2px) rotate(-1deg); }
            60% { transform: translate(-3px, 1px) rotate(0deg); }
            70% { transform: translate(3px, 1px) rotate(-1deg); }
            80% { transform: translate(-1px, -1px) rotate(1deg); }
            90% { transform: translate(1px, 2px) rotate(0deg); }
            100% { transform: translate(1px, -2px) rotate(-1deg); }
        }

        .shake {
            animation: shake 0.5s infinite;
        }
        
        /* ADDED: Styles for the new persistent exit button */
        #persistent-exit-button {
            position: fixed;
            top: 20px;
            left: 20px;
            width: 40px;
            height: 40px;
            background-color: #e53e3e; /* Red color */
            color: white;
            border: 3px solid #000;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            font-size: 28px;
            line-height: 1;
            font-weight: bold;
            text-decoration: none;
            z-index: 1000;
            box-shadow: 4px 4px 0 #000;
            transition: all 0.1s ease-in-out;
        }

        #persistent-exit-button:hover {
            background-color: #c53030;
            transform: translate(2px, 2px);
            box-shadow: 2px 2px 0 #000;
        }
    </style>
</head>
<body>
    <a href="/dashboard" id="persistent-exit-button">&times;</a>

    <div id="start-screen">
        <h1 class="game-title">Earthquake Safety Adventure</h1>
        <p class="game-subtitle">A story about staying safe during an earthquake.</p>
        <button id="start-btn" class="action-btn">Start Adventure</button>
    </div>

    <div id="game-container">
        <canvas id="game-canvas" width="800" height="600"></canvas>

        <div id="dialogue-box">
            <p id="speaker-name">Rohan</p>
            <p id="dialogue-text">Loading...</p>
        </div>
        
        <div id="choices-container">
            <button class="choice-btn" id="choice1"></button>
            <button class="choice-btn" id="choice2"></button>
            <button class="choice-btn" id="choice3"></button>
        </div>

        <button id="next-btn">Next â–¶</button>
    </div>
    
    <div id="end-screen" style="display: none;">
        <h1 class="game-title">You Survived!</h1>
        <p class="game-subtitle">You stayed calm and made all the right choices. What would you like to do next?</p>
        <div>
            <button id="restart-btn" class="action-btn">Play Again</button>
            </div>
    </div>

    <script>
        // --- DOM ELEMENT REFERENCES ---
        const startScreen = document.getElementById('start-screen');
        const endScreen = document.getElementById('end-screen');
        const startBtn = document.getElementById('start-btn');
        const restartBtn = document.getElementById('restart-btn');
        // REMOVED: const exitBtn = document.getElementById('exit-btn');
        const gameContainer = document.getElementById('game-container');
        const canvas = document.getElementById('game-canvas');
        const ctx = canvas.getContext('2d');
        const dialogueBox = document.getElementById('dialogue-box');
        const speakerName = document.getElementById('speaker-name');
        const dialogueText = document.getElementById('dialogue-text');
        const nextBtn = document.getElementById('next-btn');
        const choicesContainer = document.getElementById('choices-container');
        const choiceButtons = [
            document.getElementById('choice1'),
            document.getElementById('choice2'),
            document.getElementById('choice3')
        ];

        // --- GAME STATE ---
        let currentPage = 0;
        let images = {}; // Will hold all loaded image objects
        let loadedImagesCount = 0;
        let imagesReady = false; // Flag to track if images have finished loading
        let startClicked = false; // Flag to track if the user has clicked "Start"

        // --- IMAGE DEFINITIONS (FIXED) ---
        const imageSources = {
            library: 'images/insidee.png',
            assemblyPoint: 'images/outsidee.png',
