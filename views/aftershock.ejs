<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aftershock: The Quake's Echo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press+Start+2P', cursive;
            background-color: #1a202c;
            color: #e2e8f0;
            overflow: hidden;
            touch-action: none;
        }
        canvas {
            background-color: #2d3748;
            display: block;
            border: 4px solid #1a202c;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .game-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
            z-index: 10;
        }
        .overlay h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #f59e0b; /* Amber for earth theme */
            text-shadow: 2px 2px #000;
        }
         .overlay h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #48bb78;
            text-shadow: 2px 2px #000;
        }
        .overlay p {
            font-size: 1rem;
            max-width: 600px;
            margin-bottom: 2rem;
            line-height: 1.5;
        }
        .btn {
            padding: 1rem 2rem;
            font-size: 1.2rem;
            color: #1a202c;
            background-color: #a0aec0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-transform: uppercase;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            background-color: #cbd5e0;
            transform: translateY(-2px);
        }
        #touch-controls {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            opacity: 0.7;
        }
        .touch-btn {
            width: 60px;
            height: 60px;
            background-color: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            border-radius: 50%;
            color: white;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
        }
        .level-buttons {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }
        .exit-button {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            background-color: rgba(239, 68, 68, 0.8);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            z-index: 5;
            transition: background-color 0.2s;
        }
        .exit-button:hover {
            background-color: rgba(239, 68, 68, 1);
        }
        @media (min-width: 768px) {
            #touch-controls {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="game-container">
        <canvas id="gameCanvas"></canvas>
        <button id="exitGameButton" class="exit-button">Exit Game</button>
    </div>

    <!-- UI Overlays -->
    <div id="startScreen" class="overlay">
        <h1>Aftershock: The Quake's Echo</h1>
        <p>A massive earthquake has struck the city. The danger isn't over. Survive the aftershocks.</p>
        <button id="startButton" class="btn">Start Game</button>
    </div>
    <div id="levelCompleteScreen" class="overlay" style="display: none;">
        <h2>Level Complete!</h2>
        <p id="levelCompleteMessage"></p>
        <button id="nextLevelButton" class="btn">Next Level</button>
    </div>
     <div id="gameOverScreen" class="overlay" style="display: none;">
        <h1>Game Over!</h1>
        <p id="gameOverMessage"></p>
        <button id="restartButton" class="btn">Select Level</button>
    </div>
     <div id="levelSelectScreen" class="overlay" style="display: none;">
        <h2>Select a Level</h2>
        <div class="level-buttons">
            <button class="btn level-btn" data-level="1">Level 1</button>
            <button class="btn level-btn" data-level="2">Level 2</button>
            <button class="btn level-btn" data-level="3">Level 3</button>
            <button class="btn level-btn" data-level="4">Level 4</button>
        </div>
        <button id="exitButton" class="btn" style="margin-top: 20px;">Exit Game</button>
    </div>
    <div id="exitScreen" class="overlay" style="display: none;">
        <h1>Goodbye!</h1>
        <p>Stay safe.</p>
    </div>
    
    <!-- Touch controls for mobile -->
    <div id="touch-controls">
        <div id="touch-left" class="touch-btn">◀</div>
        <div id="touch-crouch" class="touch-btn">▼</div>
        <div id="touch-jump" class="touch-btn">▲</div>
        <div id="touch-interact" class="touch-btn">E</div>
        <div id="touch-right" class="touch-btn">▶</div>
    </div>


    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // UI Elements
        const startScreen = document.getElementById('startScreen');
        const levelCompleteScreen = document.getElementById('levelCompleteScreen');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const levelSelectScreen = document.getElementById('levelSelectScreen');
        const exitScreen = document.getElementById('exitScreen');
        const startButton = document.getElementById('startButton');
        const nextLevelButton = document.getElementById('nextLevelButton');
        const restartButton = document.getElementById('restartButton');
        const levelCompleteMessage = document.getElementById('levelCompleteMessage');
        const gameOverMessage = document.getElementById('gameOverMessage');
        const exitGameButton = document.getElementById('exitGameButton');

        // Touch Controls
        const touchLeft = document.getElementById('touch-left');
        const touchRight = document.getElementById('touch-right');
        const touchCrouch = document.getElementById('touch-crouch');
        const touchInteract = document.getElementById('touch-interact');
        const touchJump = document.getElementById('touch-jump');

        let gameRunning = false;
        let currentLevel = 1;
        const totalLevels = 4;

        // --- Game World ---
        const gravity = 0.5;
        const floorHeight = 50;

        let canvasWidth, canvasHeight;
        
        // --- Player ---
        const player = {
            x: 100, y: 0, width: 40, height: 60, crouchHeight: 40,
            speed: 4, jumpStrength: -12, dx: 0, dy: 0,
            onGround: false, isCrouching: false, hasFirstAid: false,
            draw: function() {
                const currentHeight = this.isCrouching ? this.crouchHeight : this.height;
                // Head
                ctx.fillStyle = '#f7d2a1'; ctx.fillRect(this.x + 5, this.y, this.width - 10, 20);
                // Eyes
                ctx.fillStyle = 'black'; ctx.fillRect(this.x + 12, this.y + 5, 4, 4); ctx.fillRect(this.x + 24, this.y + 5, 4, 4);
                // Body
                ctx.fillStyle = '#a0aec0'; // Simple clothes color
                ctx.fillRect(this.x, this.y + 20, this.width, currentHeight - 35);
                // Legs
                ctx.fillStyle = '#4a5568';
                const legY = this.y + 20 + (currentHeight - 35);
                 if (!this.isCrouching) {
                    ctx.fillRect(this.x, legY, 15, 15);
                    ctx.fillRect(this.x + this.width - 15, legY, 15, 15);
                } else {
                     ctx.fillRect(this.x, legY, this.width, 15);
                }
            }
        };

        // --- Game Objects & State ---
        let interactables = [];
        let levelState = {};
        let aftershockTimer = 0;
        let isShaking = false;
        let shakeIntensity = 0;
        let fallingDebris = [];

        // --- Input Handling ---
        const keys = { right: false, left: false, crouch: false, interact: false, jump: false };
        function keyDown(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = true;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = true;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = true;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = true;
            if (e.key === 'e') keys.interact = true;
        }
        function keyUp(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = false;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = false;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = false;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = false;
            if (e.key === 'e') keys.interact = false;
        }
        
        // --- Touch Handling ---
        function handleTouch(element, keyName, startOrEnd) {
             element.addEventListener(startOrEnd, (e) => { e.preventDefault(); keys[keyName] = (startOrEnd === 'touchstart'); });
        }
        handleTouch(touchLeft, 'left', 'touchstart'); handleTouch(touchLeft, 'left', 'touchend');
        handleTouch(touchRight, 'right', 'touchstart'); handleTouch(touchRight, 'right', 'touchend');
        handleTouch(touchCrouch, 'crouch', 'touchstart'); handleTouch(touchCrouch, 'crouch', 'touchend');
        handleTouch(touchInteract, 'interact', 'touchstart'); handleTouch(touchInteract, 'interact', 'touchend');
        handleTouch(touchJump, 'jump', 'touchstart'); handleTouch(touchJump, 'jump', 'touchend');

        // --- Effects ---
        function startAftershock(duration, intensity) {
            isShaking = true;
            shakeIntensity = intensity;
            aftershockTimer = duration;
            createFallingDebris(10); // More debris to make it a challenge
        }
        
        function createFallingDebris(count) {
            fallingDebris = [];
            for (let i = 0; i < count; i++) {
                fallingDebris.push({
                    x: Math.random() * canvasWidth,
                    y: -Math.random() * 50,
                    width: Math.random() * 15 + 5,
                    height: Math.random() * 15 + 5,
                    speedY: Math.random() * 3 + 2
                });
            }
        }
        
        function updateEffects() {
            if (isShaking) {
                aftershockTimer -= 1000 / 60;
                if (aftershockTimer <= 0) {
                    isShaking = false;
                    shakeIntensity = 0;
                    fallingDebris = [];
                    // If level 1, mark the cover objective as complete now that the shake is over
                    if (currentLevel === 1) {
                         levelState.objectives['Drop, Cover, and Hold On'] = true;
                    }
                }
            }
            
            fallingDebris.forEach(deb => {
                deb.y += deb.speedY;
            });
        }

        // --- Level Setup ---
        function setupLevel(level) {
            interactables = [];
            player.hasFirstAid = false;
            player.isCrouching = false;
            keys.interact = false; keys.jump = false;
            isShaking = false;
            fallingDebris = [];

            if (level === 1) {
                levelState = { objectives: { 'Drop, Cover, and Hold On': false, 'Exit the building safely': false } };
                interactables.push({ name: 'Sturdy Table', x: 400, y: canvasHeight - floorHeight - 80, width: 150, height: 80, isSafeZone: true });
                interactables.push({ name: 'Weak Shelf', x: 700, y: canvasHeight - floorHeight - 120, width: 100, height: 120, isHazard: true });
                interactables.push({ name: 'Exit', x: canvasWidth - 80, y: canvasHeight - floorHeight - 150, width: 80, height: 150, isGoal: true });
                setTimeout(() => startAftershock(5000, 10), 2000);
            } else if (level === 2) {
                levelState = { objectives: { 'Avoid falling glass': false, 'Check on neighbor': false, 'Find a clear area': false } };
                interactables.push({ name: 'Neighbor', x: 300, y: canvasHeight - floorHeight - 60, width: 40, height: 60, isHelped: false });
                interactables.push({ name: 'Clear Area', x: canvasWidth - 100, y: canvasHeight - floorHeight - 100, width: 100, height: 100, isGoal: true });
                interactables.push({ name: 'Damaged Building', x: 500, y: 0, width: 150, height: canvasHeight-floorHeight, isHazard: true });
                 setTimeout(() => startAftershock(7000, 15), 3000);
            } else if (level === 3) {
                 levelState = { objectives: { 'Get first aid kit': false, 'Help injured person': false } };
                 interactables.push({ name: 'First Aid Kit', x: 800, y: canvasHeight - floorHeight - 40, width: 50, height: 40, isCollected: false });
                 interactables.push({ name: 'Injured Person', x: 200, y: canvasHeight - floorHeight - 60, width: 40, height: 60, isHelped: false });
                 interactables.push({ name: 'Ambulance', x: canvasWidth - 120, y: canvasHeight - floorHeight - 120, width: 120, height: 120, isGoal: true });
            } else if (level === 4) {
                levelState = { objectives: { 'Turn off gas main': false, 'Listen to emergency radio': false, 'Await instructions': false } };
                interactables.push({ name: 'Gas Main', x: 200, y: canvasHeight - floorHeight - 60, width: 50, height: 60, isOff: false });
                interactables.push({ name: 'Emergency Radio', x: 800, y: canvasHeight - floorHeight - 100, width: 80, height: 100, isUsed: false });
                interactables.push({ name: 'Safe Spot', x: 500, y: canvasHeight-floorHeight - 60, width: 100, height: 60, isGoal: true});
            }
             player.x = 100;
             player.y = canvasHeight - floorHeight - player.height;
        }

        function checkObjectives() {
            let completedCount = 0;
            const objectives = Object.keys(levelState.objectives);
            
            for (const obj of objectives) {
                let isComplete = levelState.objectives[obj]; // Start with the current state
                switch (obj) {
                    case 'Exit the building safely': case 'Find a clear area':
                        isComplete = isPlayerNear(interactables.find(i => i.isGoal));
                        break;
                    case 'Avoid falling glass':
                        if (levelState.objectives['Avoid falling glass']) {
                            isComplete = true;
                        } else {
                            isComplete = player.x < 500;
                        }
                        break;
                    case 'Check on neighbor': isComplete = interactables.find(i => i.name === 'Neighbor')?.isHelped; break;
                    case 'Get first aid kit': isComplete = player.hasFirstAid; break;
                    case 'Help injured person': isComplete = interactables.find(i => i.name === 'Injured Person')?.isHelped; break;
                    case 'Turn off gas main': isComplete = interactables.find(i => i.name === 'Gas Main')?.isOff; break;
                    case 'Listen to emergency radio': isComplete = interactables.find(i => i.name === 'Emergency Radio')?.isUsed; break;
                    case 'Await instructions': isComplete = isPlayerNear(interactables.find(i => i.name === 'Safe Spot')); break;
                }
                levelState.objectives[obj] = isComplete;
                if (isComplete) completedCount++;
            }

            if (completedCount === objectives.length && !isShaking) {
                endLevel(true);
            }
        }
        
        function isPlayerNear(item) {
            if (!item) return false;
            const interactionRange = 20;
            return player.x < item.x + item.width + interactionRange &&
                   player.x + player.width > item.x - interactionRange &&
                   player.y < item.y + item.height + interactionRange &&
                   player.y + player.height > item.y - interactionRange;
        }

        function handleInteractions() {
            if (!keys.interact) return;
            interactables.forEach(item => {
                if (isPlayerNear(item)) {
                    switch(item.name) {
                        case 'Neighbor': item.isHelped = true; break;
                        case 'First Aid Kit': if(!item.isCollected) { item.isCollected = true; player.hasFirstAid = true; } break;
                        case 'Injured Person': if(player.hasFirstAid) item.isHelped = true; break;
                        case 'Gas Main': item.isOff = true; break;
                        case 'Emergency Radio': item.isUsed = true; break;
                    }
                }
            });
            keys.interact = false;
        }

        function update() {
            if (!gameRunning) return;

            player.dx = 0; player.isCrouching = keys.crouch;
            if (keys.right) player.dx = player.speed;
            if (keys.left) player.dx = -player.speed;
            
            if (keys.jump && player.onGround) {
                player.dy = player.jumpStrength; player.onGround = false;
            }

            player.x += player.dx;
            player.dy += gravity; 
            player.y += player.dy;
            
            const currentHeight = player.isCrouching ? player.crouchHeight : player.height;
            let onAnyPlatform = false;
            interactables.filter(i => i.isPlatform).forEach(platform => {
                 if (player.x + player.width > platform.x && player.x < platform.x + platform.width &&
                    player.y + currentHeight >= platform.y && (player.y - player.dy) + currentHeight <= platform.y && player.dy >= 0) {
                        player.y = platform.y - currentHeight; player.dy = 0; player.onGround = true; onAnyPlatform = true;
                 }
            });

            if (player.y + currentHeight >= canvasHeight - floorHeight) {
                player.y = canvasHeight - floorHeight - currentHeight;
                player.dy = 0; player.onGround = true; onAnyPlatform = true;
            }
            if (!onAnyPlatform) { player.onGround = false; }

            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvasWidth) player.x = canvasWidth - player.width;

            handleInteractions();
            updateEffects();
            checkObjectives();
            
            // Fail Conditions
            if (isShaking) {
                // Check if hit by debris regardless of cover
                fallingDebris.forEach(deb => {
                    if (player.x < deb.x + deb.width && player.x + player.width > deb.x &&
                        player.y < deb.y + deb.height && player.y + player.height > deb.y) {
                        endLevel(false, "You were hit by falling debris during the aftershock!");
                    }
                });
            }
        }

        function draw() {
            ctx.save();
            if (isShaking) {
                const shakeX = (Math.random() - 0.5) * shakeIntensity;
                const shakeY = (Math.random() - 0.5) * shakeIntensity;
                ctx.translate(shakeX, shakeY);
            }
            
            // --- Draw Background & Scene ---
            if (currentLevel < 2) { // Indoors
                 ctx.fillStyle = '#d1d5db'; ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            } else { // Outdoors
                const skyGrad = ctx.createLinearGradient(0, 0, 0, canvasHeight);
                skyGrad.addColorStop(0, '#6b7280'); skyGrad.addColorStop(1, '#9ca3af');
                ctx.fillStyle = skyGrad; ctx.fillRect(0, 0, canvasWidth, canvasHeight);
            }

            ctx.fillStyle = '#7f8c8d'; // Floor / Ground
            ctx.fillRect(0, canvasHeight - floorHeight, canvasWidth, floorHeight);
            
            // --- Draw Interactables ---
            interactables.forEach(item => {
                switch(item.name) {
                    case 'Sturdy Table': case 'Rubble': case 'Car': case 'Cot':
                        ctx.fillStyle = '#6b7280'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Weak Shelf':
                        ctx.fillStyle = '#ef4444'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Exit': case 'Clear Area': case 'Ambulance': case 'Medic Station': case 'Safe Spot':
                        ctx.fillStyle = '#22c55e'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Damaged Building':
                         ctx.fillStyle = '#4b5563'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Neighbor': case 'Injured Person':
                         ctx.fillStyle = '#f7d2a1'; ctx.fillRect(item.x + 5, item.y, item.width - 10, 20);
                         ctx.fillStyle = item.isHelped ? '#3498db' : '#e67e22'; ctx.fillRect(item.x, item.y + 20, item.width, item.height - 20);
                         break;
                    case 'First Aid Kit':
                        if(!item.isCollected) {
                            ctx.fillStyle = '#fff'; ctx.fillRect(item.x, item.y, item.width, item.height);
                            ctx.fillStyle = '#ef4444'; ctx.fillRect(item.x + item.width/2 - 5, item.y+10, 10, item.height-20);
                            ctx.fillRect(item.x+10, item.y+item.height/2-5, item.width-20, 10);
                        }
                        break;
                    case 'Gas Main':
                        ctx.fillStyle = item.isOff ? '#22c55e' : '#f59e0b';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Emergency Radio':
                        ctx.fillStyle = item.isUsed ? '#22c55e' : '#374151';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                }
                
                if (isPlayerNear(item) && !item.isGoal && !item.isPlatform && !item.isSafeZone) {
                    let hint = "[E]";
                    if(item.name === 'Injured Person' && !player.hasFirstAid) hint = "Need Aid Kit!";
                    ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'center';
                    ctx.fillText(hint, item.x + item.width / 2, item.y > 20 ? item.y - 10 : item.y + item.height + 20);
                }
            });
            
            // --- Falling Debris ---
            ctx.fillStyle = '#4b5563';
            fallingDebris.forEach(deb => {
                ctx.fillRect(deb.x, deb.y, deb.width, deb.height);
            });

            if (gameRunning) { player.draw(); }
            
            ctx.restore(); // Restore from shake
            drawUI();
        }

        function drawUI() {
            if (!gameRunning) return;
            const objectives = Object.keys(levelState.objectives);
            const boxWidth = 550;
            ctx.fillStyle = 'rgba(0,0,0,0.5)';
            ctx.fillRect(10, 10, boxWidth, 25 + objectives.length * 25);
            ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'left';
            ctx.fillText("Level " + currentLevel + " Objectives:", 20, 35);

            let i = 0;
            for (const [objective, completed] of Object.entries(levelState.objectives)) {
                ctx.fillStyle = completed ? '#48bb78' : '#e53e3e';
                ctx.fillText(`${completed ? '[X]' : '[ ]'} ${objective}`, 20, 60 + i * 25);
                i++;
            }

            if (isShaking) {
                ctx.fillStyle = '#ef4444';
                ctx.font = "24px 'Press Start 2P'";
                ctx.textAlign = 'center';
                ctx.fillText(`AFTERSHOCK!`, canvasWidth / 2, 60);
            }

            ctx.fillStyle = 'white'; ctx.font = "14px 'Press Start 2P'"; ctx.textAlign = 'center';
            ctx.fillText("Move:A/D | Jump:W | Crouch:S | Interact:E", canvasWidth / 2, 30);
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }
        
        function endLevel(success, message) {
            gameRunning = false;
            if (success) {
                let successMessage = "";
                 switch(currentLevel) {
                    case 1: successMessage = "Good job! You survived the aftershock and escaped the building."; break;
                    case 2: successMessage = "Excellent! You avoided hazards and found a safe area."; break;
                    case 3: successMessage = "Great work! Helping others is vital in a disaster."; break;
                    case 4: successMessage = "You made it! You secured your area and stayed informed."; break;
                 }
                if (currentLevel < totalLevels) {
                    levelCompleteMessage.textContent = successMessage;
                    levelCompleteScreen.style.display = 'flex';
                } else {
                    gameOverMessage.textContent = successMessage + " You're an earthquake safety expert!";
                    gameOverScreen.style.display = 'flex';
                }
            } else {
                gameOverMessage.textContent = message || "The aftershock was too dangerous. Let's try again!";
                gameOverScreen.style.display = 'flex';
            }
        }
        
        function startGame() {
            startScreen.style.display = 'none';
            levelCompleteScreen.style.display = 'none';
            gameOverScreen.style.display = 'none';
            levelSelectScreen.style.display = 'none';
            setupLevel(currentLevel);
            gameRunning = true;
        }

        function resizeCanvas() {
            const container = document.querySelector('.game-container');
            const aspectRatio = 16 / 9;
            let newWidth = container.clientWidth; let newHeight = container.clientHeight;
            if (newWidth / newHeight > aspectRatio) { newWidth = newHeight * aspectRatio; } else { newHeight = newWidth / aspectRatio; }
            canvas.width = 1024; canvas.height = 576;
            canvas.style.width = `${newWidth}px`; canvas.style.height = `${newHeight}px`;
            canvasWidth = canvas.width; canvasHeight = canvas.height;
            if (gameRunning) { setupLevel(currentLevel); }
        }
        
        // Exit game function
        function exitGame() {
            window.location.href = '/dashboard';
        }
        
        window.addEventListener('resize', resizeCanvas);
        window.addEventListener('keydown', keyDown);
        window.addEventListener('keyup', keyUp);

        // Add event listener for the exit button
        exitGameButton.addEventListener('click', exitGame);
        
        startButton.addEventListener('click', () => { currentLevel = 1; startGame(); });
        nextLevelButton.addEventListener('click', () => { currentLevel++; startGame(); });
        restartButton.addEventListener('click', () => { gameOverScreen.style.display = 'none'; levelSelectScreen.style.display = 'flex'; });

        document.querySelectorAll('.level-btn').forEach(button => {
            button.addEventListener('click', () => { currentLevel = parseInt(button.dataset.level); startGame(); });
        });

        document.querySelector('#exitButton').addEventListener('click', exitGame);

        resizeCanvas();
        draw();
        requestAnimationFrame(gameLoop);
    </script>
