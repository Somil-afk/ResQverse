<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flood Survival Challenge</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press Start 2P', cursive;
            background-color: #1a202c;
            color: #e2e8f0;
            overflow: hidden;
            touch-action: none;
        }
        canvas {
            background-color: #4a5568;
            display: block;
            border: 4px solid #2d3748;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .game-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }
        .overlay h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #63b3ed;
            text-shadow: 2px 2px #000;
        }
         .overlay h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #48bb78;
            text-shadow: 2px 2px #000;
        }
        .overlay p {
            font-size: 1rem;
            max-width: 600px;
            margin-bottom: 2rem;
            line-height: 1.5;
        }
        .btn {
            padding: 1rem 2rem;
            font-size: 1.2rem;
            color: #1a202c;
            background-color: #a0aec0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-transform: uppercase;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            background-color: #cbd5e0;
            transform: translateY(-2px);
        }
        #touch-controls {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            opacity: 0.7;
        }
        .touch-btn {
            width: 60px;
            height: 60px;
            background-color: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            border-radius: 50%;
            color: white;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
        }
        .level-buttons {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }
        #exit-dashboard-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            padding: 0.5rem 1rem;
            background-color: #e53e3e;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'Press Start 2P', cursive;
            font-size: 0.8rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            transition: all 0.2s ease-in-out;
        }
        #exit-dashboard-btn:hover {
            background-color: #c53030;
            transform: translateY(-2px);
        }
        @media (min-width: 768px) {
            #touch-controls {
                display: none;
            }
        }
    </style>
</head>
<body>
    <!-- Red Exit Button to Dashboard -->
    <button id="exit-dashboard-btn">Exit to Dashboard</button>

    <div class="game-container">
        <canvas id="gameCanvas"></canvas>
    </div>

    <!-- UI Overlays -->
    <div id="startScreen" class="overlay">
        <h1>Flood Survival</h1>
        <p>Heavy rains have been reported and floodwaters are rising! Make the right choices to get to safety.</p>
        <button id="startButton" class="btn">Start Game</button>
    </div>
    <div id="levelCompleteScreen" class="overlay" style="display: none;">
        <h2>Level Complete!</h2>
        <p id="levelCompleteMessage"></p>
        <button id="nextLevelButton" class="btn">Next Level</button>
    </div>
     <div id="gameOverScreen" class="overlay" style="display: none;">
        <h1>Game Over!</h1>
        <p id="gameOverMessage"></p>
        <button id="restartButton" class="btn">Select Level</button>
    </div>
     <div id="levelSelectScreen" class="overlay" style="display: none;">
        <h2>Select a Level</h2>
        <div class="level-buttons">
            <button class="btn level-btn" data-level="1">Level 1</button>
            <button class="btn level-btn" data-level="2">Level 2</button>
            <button class="btn level-btn" data-level="3">Level 3</button>
            <button class="btn level-btn" data-level="4">Level 4</button>
        </div>
        <button id="exitButton" class="btn" style="margin-top: 20px;">Exit Game</button>
    </div>
    <div id="exitScreen" class="overlay" style="display: none;">
        <h1>Goodbye!</h1>
        <p>Thanks for playing Flood Survival.</p>
    </div>
    
    <!-- Touch controls for mobile -->
    <div id="touch-controls">
        <div id="touch-left" class="touch-btn">◀</div>
        <div id="touch-jump" class="touch-btn">▲</div>
        <div id="touch-interact" class="touch-btn">E</div>
        <div id="touch-right" class="touch-btn">▶</div>
    </div>


    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // UI Elements
        const startScreen = document.getElementById('startScreen');
        const levelCompleteScreen = document.getElementById('levelCompleteScreen');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const levelSelectScreen = document.getElementById('levelSelectScreen');
        const exitScreen = document.getElementById('exitScreen');
        const startButton = document.getElementById('startButton');
        const nextLevelButton = document.getElementById('nextLevelButton');
        const restartButton = document.getElementById('restartButton');
        const levelCompleteMessage = document.getElementById('levelCompleteMessage');
        const gameOverMessage = document.getElementById('gameOverMessage');
        const exitDashboardBtn = document.getElementById('exit-dashboard-btn');

        // Touch Controls
        const touchLeft = document.getElementById('touch-left');
        const touchRight = document.getElementById('touch-right');
        const touchInteract = document.getElementById('touch-interact');
        const touchJump = document.getElementById('touch-jump');

        let gameRunning = false;
        let currentLevel = 1;
        const totalLevels = 4;

        // --- Game World ---
        const gravity = 0.5;
        let floorHeight;

        let canvasWidth, canvasHeight;
        
        // --- Player ---
        const player = {
            x: 100, y: 0, width: 40, height: 60,
            speed: 4, jumpStrength: -12, dx: 0, dy: 0,
            onGround: false, hasKit: false, hasFood: false,
            draw: function() {
                // Head
                ctx.fillStyle = '#f7d2a1'; ctx.fillRect(this.x + 5, this.y, this.width - 10, 20);
                // Eyes
                ctx.fillStyle = 'black'; ctx.fillRect(this.x + 12, this.y + 5, 4, 4); ctx.fillRect(this.x + 24, this.y + 5, 4, 4);
                // Body
                ctx.fillStyle = '#c0392b'; ctx.fillRect(this.x, this.y + 20, this.width, this.height - 35);
                // Legs
                ctx.fillStyle = '#2980b9';
                const legY = this.y + 20 + (this.height - 35);
                ctx.fillRect(this.x, legY, 15, 15); ctx.fillRect(this.x + this.width - 15, legY, 15, 15);
            }
        };

        // --- Game Objects & State ---
        let interactables = [];
        let levelState = {};
        let floodLevel = 0;

        // --- Input Handling ---
        const keys = { right: false, left: false, interact: false, jump: false };
        function keyDown(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = true;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = true;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = true;
            if (e.key === 'e') keys.interact = true;
        }
        function keyUp(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = false;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = false;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = false;
            if (e.key === 'e') keys.interact = false;
        }
        
        // --- Touch Handling ---
        function handleTouch(element, keyName, startOrEnd) {
             element.addEventListener(startOrEnd, (e) => { e.preventDefault(); keys[keyName] = (startOrEnd === 'touchstart'); });
        }
        handleTouch(touchLeft, 'left', 'touchstart'); handleTouch(touchLeft, 'left', 'touchend');
        handleTouch(touchRight, 'right', 'touchstart'); handleTouch(touchRight, 'right', 'touchend');
        handleTouch(touchInteract, 'interact', 'touchstart'); handleTouch(touchInteract, 'interact', 'touchend');
        handleTouch(touchJump, 'jump', 'touchstart'); handleTouch(touchJump, 'jump', 'touchend');

        // --- Effects ---
        let rain = [];
        function createRain(count) {
            const arr = [];
            for (let i = 0; i < count; i++) {
                arr.push({
                    x: Math.random() * canvasWidth, y: Math.random() * canvasHeight,
                    length: Math.random() * 20 + 10, speed: Math.random() * 5 + 5
                });
            }
            return arr;
        }
        
        function updateEffects() {
            rain.forEach(p => {
                p.y += p.speed;
                if (p.y > canvasHeight) { p.y = -p.length; p.x = Math.random() * canvasWidth; }
            });
            if (gameRunning && currentLevel > 1 && currentLevel < 4) {
                const floodTarget = (canvasHeight / totalLevels) * (currentLevel - 1) - 20;
                if (floodLevel < floodTarget) {
                    floodLevel += 0.2;
                }
            }
        }

        // --- Level Setup ---
        function setupLevel(level) {
            interactables = [];
            player.hasKit = false;
            player.hasFood = false;
            keys.interact = false; keys.jump = false;
            floodLevel = 0;

            if (level === 1) {
                floorHeight = 50;
                levelState = { objectives: { 'Turn off main power': false, 'Grab emergency kit': false, 'Move upstairs': false } };
                interactables.push({ name: 'Power Switch', x: 850, y: canvasHeight / 2, width: 30, height: 50, isOn: true });
                interactables.push({ name: 'Kit', x: 200, y: canvasHeight - floorHeight - 80, width: 40, height: 30, isCollected: false, isPlatform: true });
                interactables.push({ name: 'Stairs', x: canvasWidth - 100, y: canvasHeight - floorHeight - 150, width: 100, height: 150, isGoal: true });
                interactables.push({ name: 'Table', x: 400, y: canvasHeight - floorHeight - 50, width: 150, height: 50, isPlatform: true });
                rain = createRain(100);
            } else if (level === 2) {
                floorHeight = canvasHeight / 2; // Higher floor
                levelState = { objectives: { 'Find a working radio': false, 'Avoid the floodwater': false } };
                interactables.push({ name: 'Radio', x: 200, y: canvasHeight - floorHeight - 40, width: 60, height: 40, isUsed: false });
                interactables.push({ name: 'Attic Hatch', x: canvasWidth - 150, y: 50, width: 100, height: 20, isGoal: true });
                interactables.push({ name: 'Box', x: 550, y: canvasHeight - floorHeight - 80, width: 80, height: 80, isPlatform: true });
                interactables.push({ name: 'Shelf', x: 750, y: canvasHeight - floorHeight - 140, width: 100, height: 20, isPlatform: true });
                rain = createRain(200);
            } else if (level === 3) {
                 floorHeight = canvasHeight - 50; // On the roof
                 levelState = { objectives: { 'Grab emergency kit': false, 'Signal for help': false } };
                 interactables.push({ name: 'Kit', x: 200, y: canvasHeight - floorHeight - 30, width: 40, height: 30, isCollected: false });
                 interactables.push({ name: 'Flashlight Signal', x: canvasWidth / 2, y: canvasHeight - floorHeight - player.height, width: 10, height: 10, isGoal: true });
                 rain = createRain(50);
            } else if (level === 4) {
                floorHeight = 50; // Shelter floor
                levelState = { objectives: { 'Get food pack': false, 'Help survivor': false, 'Check safety board': false } };
                interactables.push({ name: 'Food Table', x: 200, y: canvasHeight - floorHeight - 50, width: 120, height: 50, isUsed: false, isPlatform: true });
                interactables.push({ name: 'Survivor', x: 600, y: canvasHeight - floorHeight - player.height, width: 40, height: 60, isHelped: false });
                interactables.push({ name: 'Safety Board', x: 850, y: canvasHeight - floorHeight - 120, width: 100, height: 120, isUsed: false });
                rain = createRain(10); // Light rain outside
            }
             player.x = 100;
             player.y = canvasHeight - floorHeight - player.height;
        }

        function checkObjectives() {
            let completedCount = 0;
            const objectives = Object.keys(levelState.objectives);
            
            for (const obj of objectives) {
                let isComplete = false;
                switch (obj) {
                    case 'Turn off main power': isComplete = !interactables.find(i => i.name === 'Power Switch')?.isOn; break;
                    case 'Grab emergency kit': isComplete = player.hasKit; break;
                    case 'Move upstairs':
                    case 'Avoid the floodwater': isComplete = isPlayerNear(interactables.find(i => i.isGoal)); break;
                    case 'Find a working radio': isComplete = interactables.find(i => i.name === 'Radio')?.isUsed; break;
                    case 'Signal for help': isComplete = isPlayerNear(interactables.find(i => i.name === 'Flashlight Signal')) && player.hasKit; break;
                    case 'Get food pack': isComplete = interactables.find(i => i.name === 'Food Table')?.isUsed; break;
                    case 'Help survivor': isComplete = interactables.find(i => i.name === 'Survivor')?.isHelped; break;
                    case 'Check safety board': isComplete = interactables.find(i => i.name === 'Safety Board')?.isUsed; break;
                }
                levelState.objectives[obj] = isComplete;
                if (isComplete) completedCount++;
            }

            if (completedCount === objectives.length) {
                endLevel(true);
            }
        }
        
        function isPlayerNear(item) {
            if (!item) return false;
            const interactionRange = 20;
            return player.x < item.x + item.width + interactionRange &&
                   player.x + player.width > item.x - interactionRange &&
                   player.y < item.y + item.height + interactionRange &&
                   player.y + player.height > item.y - interactionRange;
        }

        function handleInteractions() {
            if (!keys.interact) return;
            interactables.forEach(item => {
                if (isPlayerNear(item)) {
                    switch(item.name) {
                        case 'Power Switch': item.isOn = !item.isOn; break;
                        case 'Kit': if (!item.isCollected) { item.isCollected = true; player.hasKit = true; } break;
                        case 'Radio': item.isUsed = true; break;
                        case 'Food Table': if (!item.isUsed) { item.isUsed = true; player.hasFood = true; } break;
                        case 'Survivor': if (player.hasFood && !item.isHelped) { item.isHelped = true; player.hasFood = false; } break;
                        case 'Safety Board': item.isUsed = true; break;
                    }
                }
            });
            keys.interact = false;
        }

        function update() {
            if (!gameRunning) return;

            player.dx = 0;
            if (keys.right) player.dx = player.speed;
            if (keys.left) player.dx = -player.speed;
            
            if (keys.jump && player.onGround) {
                player.dy = player.jumpStrength; player.onGround = false;
            }

            player.x += player.dx;
            player.dy += gravity; player.y += player.dy;

            let onAnyPlatform = false;
            interactables.filter(i => i.isPlatform).forEach(platform => {
                 if (player.x + player.width > platform.x && player.x < platform.x + platform.width &&
                    player.y + player.height >= platform.y && (player.y - player.dy) + player.height <= platform.y && player.dy >= 0) {
                        player.y = platform.y - player.height; player.dy = 0; player.onGround = true; onAnyPlatform = true;
                 }
            });

            if (player.y + player.height >= canvasHeight - floorHeight) {
                player.y = canvasHeight - floorHeight - player.height;
                player.dy = 0; player.onGround = true; onAnyPlatform = true;
            }
            if (!onAnyPlatform) { player.onGround = false; }

            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvasWidth) player.x = canvasWidth - player.width;

            handleInteractions();
            updateEffects();
            checkObjectives();
            
            if (player.y + player.height > canvasHeight - floodLevel) {
                endLevel(false, "You touched the floodwater! Always move to higher ground.");
            }
        }

        function draw() {
            // --- Draw Background & Water ---
            const skyGrad = ctx.createLinearGradient(0, 0, 0, canvasHeight);
            skyGrad.addColorStop(0, '#2c3e50'); skyGrad.addColorStop(1, '#757f9a');
            ctx.fillStyle = skyGrad; ctx.fillRect(0, 0, canvasWidth, canvasHeight);
            
            if (currentLevel < 4) {
                 ctx.fillStyle = 'rgba(41, 128, 185, 0.8)';
                 ctx.fillRect(0, canvasHeight - floodLevel, canvasWidth, floodLevel);
            }

            // --- Draw Scene ---
            if (currentLevel < 3) {
                 ctx.fillStyle = '#95a5a6'; // Back wall
                 ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            } else if (currentLevel === 3) {
                // Rooftop background
                ctx.fillStyle = '#636e72'; ctx.fillRect(0, canvasHeight - floorHeight - 20, canvasWidth, 20);
            } else if (currentLevel === 4) {
                ctx.fillStyle = '#95a5a6'; // Shelter wall
                ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            }
            ctx.fillStyle = '#7f8c8d'; // Floor
            ctx.fillRect(0, canvasHeight - floorHeight, canvasWidth, floorHeight);

            // --- Draw Interactables ---
            interactables.forEach(item => {
                switch(item.name) {
                    case 'Table': case 'Box':
                        ctx.fillStyle = '#8d6e63'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Shelf':
                        ctx.fillStyle = '#a1887f'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Power Switch':
                         ctx.fillStyle = '#bdc3c7'; ctx.fillRect(item.x, item.y, item.width, item.height);
                         ctx.fillStyle = item.isOn ? '#f1c40f' : '#7f8c8d';
                         ctx.fillRect(item.x + 5, item.y + (item.isOn ? 5 : 25) , item.width - 10, 20); break;
                    case 'Kit':
                        if(!item.isCollected) {
                            ctx.fillStyle = '#ffffff'; ctx.fillRect(item.x, item.y, item.width, item.height);
                            ctx.fillStyle = '#e74c3c'; ctx.fillRect(item.x + item.width/2 - 5, item.y + 5, 10, item.height - 10);
                            ctx.fillRect(item.x + 5, item.y + item.height/2 - 5, item.width - 10, 10);
                        } break;
                    case 'Stairs': case 'Attic Hatch':
                        ctx.fillStyle = '#27ae60'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Radio':
                        ctx.fillStyle = item.isUsed ? '#2ecc71' : '#34495e'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Flashlight Signal':
                        if (player.hasKit && isPlayerNear(item) && Math.random() > 0.5) {
                            ctx.fillStyle = 'yellow';
                            ctx.beginPath(); ctx.arc(item.x + 5, item.y, 20, 0, Math.PI * 2); ctx.fill();
                        } break;
                    case 'Food Table':
                        ctx.fillStyle = '#8d6e63'; ctx.fillRect(item.x, item.y, item.width, item.height); 
                        if (!item.isUsed) {
                            ctx.fillStyle = '#f1c40f'; ctx.fillRect(item.x + 40, item.y - 20, 40, 20);
                        }
                        break;
                    case 'Survivor':
                        ctx.fillStyle = '#f7d2a1'; ctx.fillRect(item.x + 5, item.y, item.width - 10, 20);
                        ctx.fillStyle = 'black'; ctx.fillRect(item.x + 12, item.y + 5, 4, 4); ctx.fillRect(item.x + 24, item.y + 5, 4, 4);
                        ctx.fillStyle = item.isHelped ? '#3498db' : '#e67e22'; ctx.fillRect(item.x, item.y + 20, item.width, item.height - 20);
                        break;
                    case 'Safety Board':
                        ctx.fillStyle = '#d2b48c'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        if (item.isUsed) {
                            ctx.strokeStyle = 'green'; ctx.lineWidth=4; ctx.strokeRect(item.x, item.y, item.width, item.height);
                        }
                        break;
                }
                
                if (isPlayerNear(item) && !item.isGoal) {
                    let hint = "[E]";
                    if (item.name === 'Flashlight Signal' && !player.hasKit) hint = "Need Kit!";
                    if (item.name === 'Survivor' && !player.hasFood) hint = "Need Food!";
                    ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'center';
                    ctx.fillText(hint, item.x + item.width / 2, item.y - 10);
                }
            });

            if (gameRunning) { player.draw(); }
            
            // --- Draw Rain ---
            ctx.strokeStyle = 'rgba(173, 216, 230, 0.5)'; ctx.lineWidth = 2;
            rain.forEach(p => { ctx.beginPath(); ctx.moveTo(p.x, p.y); ctx.lineTo(p.x, p.y + p.length); ctx.stroke(); });

            drawUI();
        }

        function drawUI() {
            if (!gameRunning) return;
            const objectives = Object.keys(levelState.objectives);
            const boxWidth = currentLevel === 4 ? 450 : 400;
            ctx.fillStyle = 'rgba(0,0,0,0.5)';
            ctx.fillRect(10, 10, boxWidth, 25 + objectives.length * 25);
            ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'left';
            ctx.fillText("Level " + currentLevel + " Objectives:", 20, 35);

            let i = 0;
            for (const [objective, completed] of Object.entries(levelState.objectives)) {
                ctx.fillStyle = completed ? '#2ecc71' : '#e74c3c';
                ctx.fillText(`${completed ? '[X]' : '[ ]'} ${objective}`, 20, 60 + i * 25);
                i++;
            }

            // Controls Hint
            ctx.fillStyle = 'white';
            ctx.font = "14px 'Press Start 2P'";
            ctx.textAlign = 'center';
            ctx.fillText("Move:A/D | Jump:W | Interact:E", canvasWidth / 2, 30);
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }
        
        function endLevel(success, message) {
            gameRunning = false;
            if (success) {
                let successMessage = "";
                 switch(currentLevel) {
                    case 1: successMessage = "Great start! You've secured the ground floor."; break;
                    case 2: successMessage = "Good job! You reached the second floor safely."; break;
                    case 3: successMessage = "You made it! By signaling, you ensured your rescue."; break;
                    case 4: successMessage = "Excellent! You know how to stay safe even after the flood."; break;
                 }
                if (currentLevel < totalLevels) {
                    levelCompleteMessage.textContent = successMessage;
                    levelCompleteScreen.style.display = 'flex';
                } else {
                    gameOverMessage.textContent = successMessage + " You've beaten the flood!";
                    gameOverScreen.style.display = 'flex';
                }
            } else {
                gameOverMessage.textContent = message || "The flood was too dangerous. Let's try again!";
                gameOverScreen.style.display = 'flex';
            }
        }
        
        function startGame() {
            startScreen.style.display = 'none';
            levelCompleteScreen.style.display = 'none';
            gameOverScreen.style.display = 'none';
            levelSelectScreen.style.display = 'none';
            setupLevel(currentLevel);
            gameRunning = true;
        }

        function resizeCanvas() {
            const container = document.querySelector('.game-container');
            const aspectRatio = 16 / 9;
            let newWidth = container.clientWidth; let newHeight = container.clientHeight;
            if (newWidth / newHeight > aspectRatio) { newWidth = newHeight * aspectRatio; } else { newHeight = newWidth / aspectRatio; }
            canvas.width = 1024; canvas.height = 576;
            canvas.style.width = `${newWidth}px`; canvas.style.height = `${newHeight}px`;
            canvasWidth = canvas.width; canvasHeight = canvas.height;
            if (gameRunning) { setupLevel(currentLevel); }
        }
        
        window.addEventListener('resize', resizeCanvas);
        window.addEventListener('keydown', keyDown);
        window.addEventListener('keyup', keyUp);

        startButton.addEventListener('click', () => { currentLevel = 1; startGame(); });
        nextLevelButton.addEventListener('click', () => { currentLevel++; startGame(); });
        restartButton.addEventListener('click', () => { gameOverScreen.style.display = 'none'; levelSelectScreen.style.display = 'flex'; });

        document.querySelectorAll('.level-btn').forEach(button => {
            button.addEventListener('click', () => { currentLevel = parseInt(button.dataset.level); startGame(); });
        });

        document.querySelector('#exitButton').addEventListener('click', () => {
            levelSelectScreen.style.display = 'none'; exitScreen.style.display = 'flex';
        });

        // Exit to Dashboard button functionality
        exitDashboardBtn.addEventListener('click', () => {
            window.location.href = '/dashboard';
        });

        resizeCanvas();
        draw();
        requestAnimationFrame(gameLoop);
    </script>
</body>
