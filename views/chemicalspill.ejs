<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bhopal - The Long Night</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press+Start+2P', cursive;
            background-color: #1a202c;
            color: #e2e8f0;
            overflow: hidden;
            touch-action: none;
        }
        canvas {
            background-color: #2d3748;
            display: block;
            border: 4px solid #1a202c;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .game-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }
        .overlay h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #e53e3e; /* Red for danger */
            text-shadow: 2px 2px #000;
        }
         .overlay h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #48bb78;
            text-shadow: 2px 2px #000;
        }
        .overlay p {
            font-size: 1rem;
            max-width: 600px;
            margin-bottom: 2rem;
            line-height: 1.5;
        }
        .btn {
            padding: 1rem 2rem;
            font-size: 1.2rem;
            color: #1a202c;
            background-color: #a0aec0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-transform: uppercase;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            background-color: #cbd5e0;
            transform: translateY(-2px);
        }
        #touch-controls {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            opacity: 0.7;
        }
        .touch-btn {
            width: 60px;
            height: 60px;
            background-color: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            border-radius: 50%;
            color: white;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
        }
        .level-buttons {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }
        /* ADDED: Styles for the new persistent exit button */
        #persistent-exit-button {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background-color: #e53e3e; /* Red color */
            color: white;
            border-radius: 50%; /* Make it circular */
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            line-height: 1;
            font-weight: bold;
            text-decoration: none;
            z-index: 1000;
            border: 2px solid white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
            transition: all 0.2s ease-in-out;
        }
        #persistent-exit-button:hover {
            background-color: #c53030; /* Darker red on hover */
            transform: scale(1.1);
        }
        @media (min-width: 768px) {
            #touch-controls {
                display: none;
            }
        }
    </style>
</head>
<body>
    <a href="/dashboard" id="persistent-exit-button">&times;</a>

    <div class="game-container">
        <canvas id="gameCanvas"></canvas>
    </div>

    <div id="startScreen" class="overlay">
        <h1>Bhopal: The Long Night</h1>
        <p>A chemical plant disaster has occurred. A toxic gas cloud is spreading. Your choices determine your survival.</p>
        <button id="startButton" class="btn">Start Game</button>
    </div>
    <div id="levelCompleteScreen" class="overlay" style="display: none;">
        <h2>Level Complete!</h2>
        <p id="levelCompleteMessage"></p>
        <button id="nextLevelButton" class="btn">Next Level</button>
    </div>
     <div id="gameOverScreen" class="overlay" style="display: none;">
        <h1>Game Over!</h1>
        <p id="gameOverMessage"></p>
        <button id="restartButton" class="btn">Select Level</button>
    </div>
     <div id="levelSelectScreen" class="overlay" style="display: none;">
        <h2>Select a Level</h2>
        <div class="level-buttons">
            <button class="btn level-btn" data-level="1">Level 1</button>
            <button class="btn level-btn" data-level="2">Level 2</button>
            <button class="btn level-btn" data-level="3">Level 3</button>
            <button class="btn level-btn" data-level="4">Level 4</button>
        </div>
        </div>
    <div id="exitScreen" class="overlay" style="display: none;">
        <h1>Goodbye!</h1>
        <p>Never forget.</p>
    </div>
    
    <div id="touch-controls">
        <div id="touch-left" class="touch-btn">◀</div>
        <div id="touch-crouch" class="touch-btn">▼</div>
        <div id="touch-jump" class="touch-btn">▲</div>
        <div id="touch-interact" class="touch-btn">E</div>
        <div id="touch-right" class="touch-btn">▶</div>
    </div>


    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // UI Elements
        const startScreen = document.getElementById('startScreen');
        const levelCompleteScreen = document.getElementById('levelCompleteScreen');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const levelSelectScreen = document.getElementById('levelSelectScreen');
        const exitScreen = document.getElementById('exitScreen');
        const startButton = document.getElementById('startButton');
        const nextLevelButton = document.getElementById('nextLevelButton');
        const restartButton = document.getElementById('restartButton');
        const levelCompleteMessage = document.getElementById('levelCompleteMessage');
        const gameOverMessage = document.getElementById('gameOverMessage');

        // Touch Controls
        const touchLeft = document.getElementById('touch-left');
        const touchRight = document.getElementById('touch-right');
        const touchCrouch = document.getElementById('touch-crouch');
        const touchInteract = document.getElementById('touch-interact');
        const touchJump = document.getElementById('touch-jump');

        let gameRunning = false;
        let currentLevel = 1;
        const totalLevels = 4;

        // --- Game World ---
        const gravity = 0.5;
        const floorHeight = 50;

        let canvasWidth, canvasHeight;
        
        // --- Player ---
        const player = {
            x: 100, y: 0, width: 40, height: 60, crouchHeight: 40,
            speed: 4, jumpStrength: -12, dx: 0, dy: 0,
            onGround: false, isCrouching: false, hasTowel: false, hasWetTowel: false, isDecontaminated: false,
            draw: function() {
                const currentHeight = this.isCrouching ? this.crouchHeight : this.height;
                // Head
                ctx.fillStyle = '#f7d2a1'; ctx.fillRect(this.x + 5, this.y, this.width - 10, 20);
                // Wet towel over face
                if (this.hasWetTowel) {
                    ctx.fillStyle = '#60a5fa'; // Light blue
                    ctx.fillRect(this.x + 10, this.y + 12, this.width - 20, 8);
                }
                // Eyes
                ctx.fillStyle = 'black'; ctx.fillRect(this.x + 12, this.y + 5, 4, 4); ctx.fillRect(this.x + 24, this.y + 5, 4, 4);
                // Body
                ctx.fillStyle = '#a0aec0'; // Simple clothes color
                ctx.fillRect(this.x, this.y + 20, this.width, currentHeight - 35);
                // Legs
                ctx.fillStyle = '#4a5568';
                const legY = this.y + 20 + (currentHeight - 35);
                 if (!this.isCrouching) {
                    ctx.fillRect(this.x, legY, 15, 15);
                    ctx.fillRect(this.x + this.width - 15, legY, 15, 15);
                } else {
                     ctx.fillRect(this.x, legY, this.width, 15);
                }
            }
        };

        // --- Game Objects & State ---
        let interactables = [];
        let levelState = {};
        let gasClouds = [];
        let levelTimer = 0;
        const TIME_LIMIT = 15000; // 15 seconds

        // --- Input Handling ---
        const keys = { right: false, left: false, crouch: false, interact: false, jump: false };
        function keyDown(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = true;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = true;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = true;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = true;
            if (e.key === 'e') keys.interact = true;
        }
        function keyUp(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = false;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = false;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = false;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = false;
            if (e.key === 'e') keys.interact = false;
        }
        
        // --- Touch Handling ---
        function handleTouch(element, keyName, startOrEnd) {
             element.addEventListener(startOrEnd, (e) => { e.preventDefault(); keys[keyName] = (startOrEnd === 'touchstart'); });
        }
        handleTouch(touchLeft, 'left', 'touchstart'); handleTouch(touchLeft, 'left', 'touchend');
        handleTouch(touchRight, 'right', 'touchstart'); handleTouch(touchRight, 'right', 'touchend');
        handleTouch(touchCrouch, 'crouch', 'touchstart'); handleTouch(touchCrouch, 'crouch', 'touchend');
        handleTouch(touchInteract, 'interact', 'touchstart'); handleTouch(touchInteract, 'interact', 'touchend');
        handleTouch(touchJump, 'jump', 'touchstart'); handleTouch(touchJump, 'jump', 'touchend');

        // --- Effects ---
        function createGas(count, startX = 0) {
            const arr = [];
            for (let i = 0; i < count; i++) {
                arr.push({
                    x: startX + (Math.random() * (canvasWidth - startX)), 
                    y: canvasHeight - floorHeight - Math.random() * 100,
                    radius: Math.random() * 40 + 20,
                    opacity: Math.random() * 0.3 + 0.2,
                    speedX: Math.random() * 0.5 + 0.1
                });
            }
            return arr;
        }
        
        function updateEffects() {
            gasClouds.forEach(p => {
                p.x += p.speedX;
                if (p.x > canvasWidth + p.radius) p.x = -p.radius;
            });
        }

        // --- Level Setup ---
        function setupLevel(level) {
            interactables = [];
            player.hasTowel = false;
            player.hasWetTowel = false;
            player.isDecontaminated = false;
            player.isCrouching = false;
            keys.interact = false; keys.jump = false;
            gasClouds = [];

            if (level === 1) {
                levelState = { objectives: { 'Close window': false, 'Block door with towel': false, 'Listen to radio': false } };
                interactables.push({ name: 'Window', x: 700, y: canvasHeight / 2 - 50, width: 80, height: 100, isOpen: true });
                interactables.push({ name: 'Towel', x: 200, y: canvasHeight - floorHeight - 30, width: 50, height: 30, isCollected: false });
                interactables.push({ name: 'Door', x: 500, y: canvasHeight - floorHeight - 150, width: 80, height: 150, isSealed: false });
                interactables.push({ name: 'Radio', x: 850, y: canvasHeight - floorHeight - 40, width: 60, height: 40, isUsed: false });
                interactables.push({ name: 'Stool', x: 680, y: canvasHeight - floorHeight - 60, width: 80, height: 60, isPlatform: true });
                levelTimer = TIME_LIMIT;
            } else if (level === 2) {
                levelState = { objectives: { 'Find wet cloth': false, 'Navigate the street': false, 'Help neighbor': false, 'Reach evacuation point': false } };
                interactables.push({ name: 'Wet Towel', x: 200, y: canvasHeight - floorHeight - 30, width: 50, height: 30, isCollected: false });
                interactables.push({ name: 'Neighbor', x: 500, y: canvasHeight - floorHeight - 60, width: 40, height: 60, isHelped: false });
                interactables.push({ name: 'Evac Point', x: canvasWidth - 100, y: canvasHeight - floorHeight - 100, width: 100, height: 100, isGoal: true });
                interactables.push({ name: 'Rubble', x: 300, y: canvasHeight - floorHeight - 50, width: 100, height: 50, isPlatform: true });
                interactables.push({ name: 'Car', x: 700, y: canvasHeight - floorHeight - 80, width: 150, height: 80, isPlatform: true });
                gasClouds = createGas(40, 250); // Create gas only after x=250
            } else if (level === 3) {
                 levelState = { objectives: { 'Remove contaminated clothes': false, 'Enter decontamination shower': false } };
                 interactables.push({ name: 'Clothing Bin', x: 250, y: canvasHeight - floorHeight - 80, width: 80, height: 80, isUsed: false });
                 interactables.push({ name: 'Shower', x: 700, y: canvasHeight - floorHeight - 200, width: 100, height: 200, isGoal: true });
            } else if (level === 4) {
                levelState = { objectives: { 'Find sealed water': false, 'Get medical check-up': false } };
                interactables.push({ name: 'Water Bottle', x: 200, y: canvasHeight - floorHeight - 30, width: 20, height: 30, isCollected: false });
                interactables.push({ name: 'Medic Station', x: 800, y: canvasHeight - floorHeight - 100, width: 120, height: 100, isGoal: true });
                interactables.push({ name: 'Cot', x: 450, y: canvasHeight - floorHeight - 40, width: 150, height: 40, isPlatform: true });
            }
             player.x = 100;
             player.y = canvasHeight - floorHeight - player.height;
        }

        function checkObjectives() {
            let completedCount = 0;
            const objectives = Object.keys(levelState.objectives);
            
            for (const obj of objectives) {
                let isComplete = false;
                switch (obj) {
                    case 'Close window': isComplete = !interactables.find(i => i.name === 'Window')?.isOpen; break;
                    case 'Block door with towel': isComplete = interactables.find(i => i.name === 'Door')?.isSealed; break;
                    case 'Listen to radio': isComplete = interactables.find(i => i.name === 'Radio')?.isUsed; break;
                    case 'Find wet cloth': isComplete = player.hasWetTowel; break;
                    case 'Navigate the street': isComplete = player.x > canvasWidth / 2; break;
                    case 'Help neighbor': isComplete = interactables.find(i => i.name === 'Neighbor')?.isHelped; break;
                    case 'Reach evacuation point': isComplete = isPlayerNear(interactables.find(i => i.name === 'Evac Point')); break;
                    case 'Remove contaminated clothes': isComplete = interactables.find(i => i.name === 'Clothing Bin')?.isUsed; break;
                    case 'Enter decontamination shower': isComplete = isPlayerNear(interactables.find(i => i.name === 'Shower')); player.isDecontaminated = isComplete; break;
                    case 'Find sealed water': isComplete = interactables.find(i => i.name === 'Water Bottle')?.isCollected; break;
                    case 'Get medical check-up': isComplete = isPlayerNear(interactables.find(i => i.name === 'Medic Station')); break;
                }
                levelState.objectives[obj] = isComplete;
                if (isComplete) completedCount++;
            }

            if (completedCount === objectives.length) {
                endLevel(true);
            }
        }
        
        function isPlayerNear(item) {
            if (!item) return false;
            const interactionRange = 20;
            return player.x < item.x + item.width + interactionRange &&
                   player.x + player.width > item.x - interactionRange &&
                   player.y < item.y + item.height + interactionRange &&
                   player.y + player.height > item.y - interactionRange;
        }

        function handleInteractions() {
            if (!keys.interact) return;
            interactables.forEach(item => {
                if (isPlayerNear(item)) {
                    switch(item.name) {
                        case 'Window': item.isOpen = false; break;
                        case 'Towel': if(!item.isCollected) { item.isCollected = true; player.hasTowel = true; } break;
                        case 'Wet Towel': if(!item.isCollected) { item.isCollected = true; player.hasWetTowel = true; } break;
                        case 'Door': if(player.hasTowel) item.isSealed = true; break;
                        case 'Radio': item.isUsed = true; break;
                        case 'Neighbor': item.isHelped = true; break;
                        case 'Clothing Bin': item.isUsed = true; break;
                        case 'Water Bottle': item.isCollected = true; break;
                    }
                }
            });
            keys.interact = false;
        }

        function update() {
            if (!gameRunning) return;

            player.dx = 0; player.isCrouching = keys.crouch;
            if (keys.right) player.dx = player.speed;
            if (keys.left) player.dx = -player.speed;
            
            if (keys.jump && player.onGround) {
                player.dy = player.jumpStrength; player.onGround = false;
            }

            player.x += player.dx;
            player.dy += gravity; 
            player.y += player.dy;
            
            const currentHeight = player.isCrouching ? player.crouchHeight : player.height;
            let onAnyPlatform = false;
            interactables.filter(i => i.isPlatform).forEach(platform => {
                 if (player.x + player.width > platform.x && player.x < platform.x + platform.width &&
                     player.y + currentHeight >= platform.y && (player.y - player.dy) + currentHeight <= platform.y && player.dy >= 0) {
                     player.y = platform.y - currentHeight; player.dy = 0; player.onGround = true; onAnyPlatform = true;
                }
            });

            if (player.y + currentHeight >= canvasHeight - floorHeight) {
                player.y = canvasHeight - floorHeight - currentHeight;
                player.dy = 0; player.onGround = true; onAnyPlatform = true;
            }
            if (!onAnyPlatform) { player.onGround = false; }

            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvasWidth) player.x = canvasWidth - player.width;

            handleInteractions();
            updateEffects();
            checkObjectives();
            
            // Fail Conditions
            if (currentLevel === 1) {
                const window = interactables.find(i => i.name === 'Window');
                if (window && window.isOpen) {
                    levelTimer -= 1000 / 60; // Approx ms per frame
                    if (levelTimer <= 0) {
                        endLevel(false, "You didn't seal the room from the gas in time!");
                        levelTimer = 0;
                    }
                }
            }
            if (currentLevel === 2) {
                if (!player.hasWetTowel) {
                    gasClouds.forEach(cloud => {
                        const dist = Math.hypot(player.x + player.width/2 - cloud.x, (player.y + player.height/2) - cloud.y);
                        if (dist < cloud.radius) {
                            endLevel(false, "You were exposed to the toxic gas without protection!");
                        }
                    });
                }
            }
             if (currentLevel === 3 && isPlayerNear(interactables.find(i => i.name === 'Shower')) && !interactables.find(i=> i.name === 'Clothing Bin').isUsed) {
                 endLevel(false, "You entered the shower with contaminated clothes on!");
             }

        }

        function draw() {
            // --- Draw Background ---
            const skyGrad = ctx.createLinearGradient(0, 0, 0, canvasHeight);
            skyGrad.addColorStop(0, '#1a202c'); skyGrad.addColorStop(1, '#4a5568');
            ctx.fillStyle = skyGrad; ctx.fillRect(0, 0, canvasWidth, canvasHeight);
            
            // --- Draw Scene ---
            if (currentLevel === 1) { // Home interior
                ctx.fillStyle = '#95a5a6'; ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            } else if (currentLevel === 3) { // Decontamination Tent
                ctx.fillStyle = '#d1d5db'; ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            } else if (currentLevel === 4) { // Shelter
                 ctx.fillStyle = '#e5e7eb'; ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            }

            ctx.fillStyle = '#7f8c8d'; // Floor / Ground
            ctx.fillRect(0, canvasHeight - floorHeight, canvasWidth, floorHeight);
            
            // --- Draw Gas ---
            gasClouds.forEach(p => {
                ctx.fillStyle = `rgba(107, 114, 128, ${p.opacity})`; 
                ctx.beginPath(); ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2); ctx.fill();
            });

            // --- Draw Interactables ---
            interactables.forEach(item => {
                switch(item.name) {
                    case 'Rubble': case 'Car': case 'Cot': case 'Lab Bench': case 'Stool':
                        ctx.fillStyle = '#6b7280'; ctx.fillRect(item.x, item.y, item.width, item.height); break;
                    case 'Window':
                        ctx.fillStyle = item.isOpen ? '#9ca3af' : '#4b5563';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Towel':
                         if (!item.isCollected) {
                             ctx.fillStyle = '#6ee7b7'; ctx.fillRect(item.x, item.y, item.width, item.height);
                         }
                        break;
                    case 'Wet Towel':
                        if (!item.isCollected) {
                            ctx.fillStyle = '#60a5fa'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        }
                        break;
                    case 'Door':
                        ctx.fillStyle = '#8d6e63'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        if (item.isSealed) {
                             ctx.fillStyle = '#6ee7b7'; ctx.fillRect(item.x, item.y + item.height - 10, item.width, 10);
                        }
                        break;
                    case 'Radio':
                        ctx.fillStyle = item.isUsed ? '#22c55e' : '#374151';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Neighbor':
                         ctx.fillStyle = '#f7d2a1'; ctx.fillRect(item.x + 5, item.y, item.width - 10, 20);
                         ctx.fillStyle = item.isHelped ? '#3498db' : '#e67e22'; ctx.fillRect(item.x, item.y + 20, item.width, item.height - 20);
                         break;
                    case 'Evac Point': case 'Shower': case 'Medic Station':
                        ctx.fillStyle = '#16a34a'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Clothing Bin': case 'Waste Bin':
                        ctx.fillStyle = item.isUsed ? '#22c55e' : '#ef4444';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Water Bottle':
                         if (!item.isCollected) {
                             ctx.fillStyle = '#3b82f6'; ctx.fillRect(item.x, item.y, item.width, item.height);
                         }
                        break;
                }
                
                if (isPlayerNear(item) && !item.isGoal && !item.isPlatform) {
                    let hint = "[E]";
                    if(item.name === 'Door' && !player.hasTowel) hint = "Need Towel!";
                    ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'center';
                    ctx.fillText(hint, item.x + item.width / 2, item.y > 20 ? item.y - 10 : item.y + item.height + 20);
                }
            });

            if (gameRunning) { player.draw(); }

            drawUI();
        }

        function drawUI() {
            if (!gameRunning) return;
            const objectives = Object.keys(levelState.objectives);
            const boxWidth = 550;
            ctx.fillStyle = 'rgba(0,0,0,0.5)';
            ctx.fillRect(10, 10, boxWidth, 25 + objectives.length * 25);
            ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'left';
            ctx.fillText("Level " + currentLevel + " Objectives:", 20, 35);

            let i = 0;
            for (const [objective, completed] of Object.entries(levelState.objectives)) {
                ctx.fillStyle = completed ? '#48bb78' : '#e53e3e';
                ctx.fillText(`${completed ? '[X]' : '[ ]'} ${objective}`, 20, 60 + i * 25);
                i++;
            }

            // Timer for Level 1
            const window = interactables.find(i => i.name === 'Window');
            if (currentLevel === 1 && window && window.isOpen) {
                ctx.fillStyle = levelTimer < 5000 ? '#ef4444' : 'white'; // Turns red in last 5 seconds
                ctx.font = "20px 'Press Start 2P'";
                ctx.textAlign = 'center';
                ctx.fillText(`Time: ${(levelTimer / 1000).toFixed(1)}s`, canvasWidth / 2, 60);
            }

            ctx.fillStyle = 'white'; ctx.font = "14px 'Press Start 2P'"; ctx.textAlign = 'center';
            ctx.fillText("Move:A/D | Jump:W | Crouch:S | Interact:E", canvasWidth / 2, 30);
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }
        
        function endLevel(success, message) {
            gameRunning = false;
            if (success) {
                let successMessage = "";
                 switch(currentLevel) {
                     case 1: successMessage = "Good job! You sealed your home and stayed informed."; break;
                     case 2: successMessage = "Excellent! You protected yourself and helped someone."; break;
                     case 3: successMessage = "Great work! Decontamination is a critical step to safety."; break;
                     case 4: successMessage = "You survived! You took the right steps to recover after the disaster."; break;
                 }
                if (currentLevel < totalLevels) {
                    levelCompleteMessage.textContent = successMessage;
                    levelCompleteScreen.style.display = 'flex';
                } else {
                    gameOverMessage.textContent = successMessage + " You have strong survival instincts!";
                    gameOverScreen.style.display = 'flex';
                }
            } else {
                gameOverMessage.textContent = message || "The chemical hazard was too great. Let's try again!";
                gameOverScreen.style.display = 'flex';
            }
        }
        
        function startGame() {
            startScreen.style.display = 'none';
            levelCompleteScreen.style.display = 'none';
            gameOverScreen.style.display = 'none';
            levelSelectScreen.style.display = 'none';
            setupLevel(currentLevel);
            gameRunning = true;
        }

        function resizeCanvas() {
            const container = document.querySelector('.game-container');
            const aspectRatio = 16 / 9;
            let newWidth = container.clientWidth; let newHeight = container.clientHeight;
            if (newWidth / newHeight > aspectRatio) { newWidth = newHeight * aspectRatio; } else { newHeight = newWidth / aspectRatio; }
            canvas.width = 1024; canvas.height = 576;
            canvas.style.width = `${newWidth}px`; canvas.style.height = `${newHeight}px`;
            canvasWidth = canvas.width; canvasHeight = canvas.height;
            if (gameRunning) { setupLevel(currentLevel); }
        }
        
        window.addEventListener('resize', resizeCanvas);
        window.addEventListener('keydown', keyDown);
        window.addEventListener('keyup', keyUp);

        startButton.addEventListener('click', () => { currentLevel = 1; startGame(); });
        nextLevelButton.addEventListener('click', () => { currentLevel++; startGame(); });
        restartButton.addEventListener('click', () => { gameOverScreen.style.display = 'none'; levelSelectScreen.style.display = 'flex'; });

        document.querySelectorAll('.level-btn').forEach(button => {
            button.addEventListener('click', () => { currentLevel = parseInt(button.dataset.level); startGame(); });
        });
        
        resizeCanvas();
        draw();
        requestAnimationFrame(gameLoop);
    </script>
</body>
</html>