<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lockdown: Stay Safe, Stay Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press+Start+2P', cursive;
            background-color: #1a202c;
            color: #e2e8f0;
            overflow: hidden;
            touch-action: none;
        }
        canvas {
            background-color: #4a5568;
            display: block;
            border: 4px solid #2d3748;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .game-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
            z-index: 10;
        }
        .overlay h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #3b82f6; /* Blue for health theme */
            text-shadow: 2px 2px #000;
        }
         .overlay h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #48bb78;
            text-shadow: 2px 2px #000;
        }
        .overlay p {
            font-size: 1rem;
            max-width: 600px;
            margin-bottom: 2rem;
            line-height: 1.5;
        }
        .btn {
            padding: 1rem 2rem;
            font-size: 1.2rem;
            color: #1a202c;
            background-color: #a0aec0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-transform: uppercase;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            background-color: #cbd5e0;
            transform: translateY(-2px);
        }
        #touch-controls {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            opacity: 0.7;
        }
        .touch-btn {
            width: 60px;
            height: 60px;
            background-color: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            border-radius: 50%;
            color: white;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            user-select: none;
        }
        .level-buttons {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }
        .exit-button {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            background-color: rgba(239, 68, 68, 0.8);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            z-index: 5;
            transition: background-color 0.2s;
        }
        .exit-button:hover {
            background-color: rgba(239, 68, 68, 1);
        }
        @media (min-width: 768px) {
            #touch-controls {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="game-container">
        <canvas id="gameCanvas"></canvas>
        <button id="exitGameButton" class="exit-button">Exit Game</button>
    </div>

    <!-- UI Overlays -->
    <div id="startScreen" class="overlay">
        <h1>Lockdown: Stay Safe</h1>
        <p>A public health emergency has been declared. It's time to stay home and stay safe. Follow the guidelines to protect yourself and others.</p>
        <button id="startButton" class="btn">Start Game</button>
    </div>
    <div id="levelCompleteScreen" class="overlay" style="display: none;">
        <h2>Level Complete!</h2>
        <p id="levelCompleteMessage"></p>
        <button id="nextLevelButton" class="btn">Next Level</button>
    </div>
     <div id="gameOverScreen" class="overlay" style="display: none;">
        <h1>Game Over!</h1>
        <p id="gameOverMessage"></p>
        <button id="restartButton" class="btn">Select Level</button>
    </div>
     <div id="levelSelectScreen" class="overlay" style="display: none;">
        <h2>Select a Level</h2>
        <div class="level-buttons">
            <button class="btn level-btn" data-level="1">Level 1</button>
            <button class="btn level-btn" data-level="2">Level 2</button>
            <button class="btn level-btn" data-level="3">Level 3</button>
            <button class="btn level-btn" data-level="4">Level 4</button>
        </div>
    </div>
    <div id="exitScreen" class="overlay" style="display: none;">
        <h1>Goodbye!</h1>
        <p>Stay healthy and safe.</p>
    </div>
    
    <!-- Touch controls for mobile -->
    <div id="touch-controls">
        <div id="touch-left" class="touch-btn">◀</div>
        <div id="touch-crouch" class="touch-btn">▼</div>
        <div id="touch-jump" class="touch-btn">▲</div>
        <div id="touch-interact" class="touch-btn">E</div>
        <div id="touch-right" class="touch-btn">▶</div>
    </div>


    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // UI Elements
        const startScreen = document.getElementById('startScreen');
        const levelCompleteScreen = document.getElementById('levelCompleteScreen');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const levelSelectScreen = document.getElementById('levelSelectScreen');
        const exitScreen = document.getElementById('exitScreen');
        const startButton = document.getElementById('startButton');
        const nextLevelButton = document.getElementById('nextLevelButton');
        const restartButton = document.getElementById('restartButton');
        const levelCompleteMessage = document.getElementById('levelCompleteMessage');
        const gameOverMessage = document.getElementById('gameOverMessage');
        const exitGameButton = document.getElementById('exitGameButton');

        // Touch Controls
        const touchLeft = document.getElementById('touch-left');
        const touchRight = document.getElementById('touch-right');
        const touchCrouch = document.getElementById('touch-crouch');
        const touchInteract = document.getElementById('touch-interact');
        const touchJump = document.getElementById('touch-jump');

        let gameRunning = false;
        let currentLevel = 1;
        const totalLevels = 4;

        // --- Game World ---
        const gravity = 0.5;
        const floorHeight = 50;

        let canvasWidth, canvasHeight;
        
        // --- Player ---
        const player = {
            x: 100, y: 0, width: 40, height: 60, crouchHeight: 40,
            speed: 4, jumpStrength: -12, dx: 0, dy: 0,
            onGround: false, isCrouching: false, hasMask: false, hasGroceries: false, handsClean: false,
            draw: function() {
                const currentHeight = this.isCrouching ? this.crouchHeight : this.height;
                // Head
                ctx.fillStyle = '#f7d2a1'; ctx.fillRect(this.x + 5, this.y, this.width - 10, 20);
                // Mask
                if (this.hasMask) {
                    ctx.fillStyle = '#3b82f6';
                    ctx.fillRect(this.x + 8, this.y + 12, this.width - 16, 8);
                }
                // Eyes
                ctx.fillStyle = 'black'; ctx.fillRect(this.x + 12, this.y + 5, 4, 4); ctx.fillRect(this.x + 24, this.y + 5, 4, 4);
                // Body
                ctx.fillStyle = '#a0aec0';
                ctx.fillRect(this.x, this.y + 20, this.width, currentHeight - 35);
                // Legs
                ctx.fillStyle = '#4a5568';
                const legY = this.y + 20 + (currentHeight - 35);
                 if (!this.isCrouching) {
                    ctx.fillRect(this.x, legY, 15, 15);
                    ctx.fillRect(this.x + this.width - 15, legY, 15, 15);
                } else {
                     ctx.fillRect(this.x, legY, this.width, 15);
                }
            }
        };

        // --- Game Objects & State ---
        let interactables = [];
        let npcs = [];
        let levelState = {};

        // --- Input Handling ---
        const keys = { right: false, left: false, crouch: false, interact: false, jump: false };
        function keyDown(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = true;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = true;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = true;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = true;
            if (e.key === 'e') keys.interact = true;
        }
        function keyUp(e) {
            if (e.key === 'ArrowRight' || e.key === 'd') keys.right = false;
            if (e.key === 'ArrowLeft' || e.key === 'a') keys.left = false;
            if (e.key === 'ArrowDown' || e.key === 's') keys.crouch = false;
            if (e.key === 'ArrowUp' || e.key === 'w') keys.jump = false;
            if (e.key === 'e') keys.interact = false;
        }
        
        // --- Touch Handling ---
        function handleTouch(element, keyName, startOrEnd) {
             element.addEventListener(startOrEnd, (e) => { e.preventDefault(); keys[keyName] = (startOrEnd === 'touchstart'); });
        }
        handleTouch(touchLeft, 'left', 'touchstart'); handleTouch(touchLeft, 'left', 'touchend');
        handleTouch(touchRight, 'right', 'touchstart'); handleTouch(touchRight, 'right', 'touchend');
        handleTouch(touchCrouch, 'crouch', 'touchstart'); handleTouch(touchCrouch, 'crouch', 'touchend');
        handleTouch(touchInteract, 'interact', 'touchstart'); handleTouch(touchInteract, 'interact', 'touchend');
        handleTouch(touchJump, 'jump', 'touchstart'); handleTouch(touchJump, 'jump', 'touchend');

        // --- Level Setup ---
        function setupLevel(level) {
            interactables = [];
            npcs = [];
            player.hasMask = false;
            player.hasGroceries = false;
            player.handsClean = false;
            player.isCrouching = false;
            keys.interact = false; keys.jump = false;

            if (level === 1) {
                levelState = { objectives: { 'Wash your hands': false, 'Put on a mask': false, 'Check the news': false } };
                interactables.push({ name: 'Sink', x: 200, y: canvasHeight - floorHeight - 80, width: 80, height: 80 });
                interactables.push({ name: 'Mask', x: 500, y: canvasHeight - floorHeight - 30, width: 40, height: 30, isCollected: false });
                interactables.push({ name: 'TV', x: 800, y: canvasHeight - floorHeight - 100, width: 120, height: 100, isUsed: false });
            } else if (level === 2) {
                levelState = { objectives: { 'Keep social distance': false, 'Get groceries': false, 'Sanitize hands': false } };
                interactables.push({ name: 'Store', x: 800, y: canvasHeight - floorHeight - 150, width: 150, height: 150, isUsed: false });
                interactables.push({ name: 'Sanitizer', x: canvasWidth - 100, y: canvasHeight - floorHeight - 50, width: 30, height: 50, isUsed: false });
                interactables.push({ name: 'Crate1', x: 350, y: canvasHeight - floorHeight - 80, width: 80, height: 80, isPlatform: true });
                interactables.push({ name: 'Crate2', x: 550, y: canvasHeight - floorHeight - 80, width: 80, height: 80, isPlatform: true });
                npcs.push({ x: 450, y: canvasHeight - floorHeight - 60, width: 40, height: 60, vx: -0.5 });
            } else if (level === 3) {
                 levelState = { objectives: { 'Pick up essentials': false, 'Deliver to neighbor': false, 'Return home': false } };
                 interactables.push({ name: 'Essentials', x: 200, y: canvasHeight - floorHeight - 40, width: 60, height: 40, isCollected: false });
                 interactables.push({ name: 'Neighbor Door', x: 800, y: canvasHeight - floorHeight - 150, width: 80, height: 150, isUsed: false });
                 interactables.push({ name: 'Home Door', x: 50, y: canvasHeight - floorHeight - 150, width: 80, height: 150, isGoal: true });
            } else if (level === 4) {
                levelState = { objectives: { 'Isolate in room': false, 'Check temperature': false, 'Call helpline': false } };
                interactables.push({ name: 'Bed', x: 150, y: canvasHeight - floorHeight - 60, width: 120, height: 60, isGoal: true});
                interactables.push({ name: 'Thermometer', x: 400, y: canvasHeight - floorHeight - 30, width: 50, height: 20, isUsed: false });
                interactables.push({ name: 'Phone', x: 800, y: canvasHeight - floorHeight - 80, width: 50, height: 80, isUsed: false });
            }
             player.x = 100;
             player.y = canvasHeight - floorHeight - player.height;
        }

        function checkObjectives() {
            let completedCount = 0;
            const objectives = Object.keys(levelState.objectives);
            
            for (const obj of objectives) {
                let isComplete = false;
                switch (obj) {
                    case 'Wash your hands': isComplete = player.handsClean; break;
                    case 'Put on a mask': isComplete = player.hasMask; break;
                    case 'Check the news': isComplete = interactables.find(i => i.name === 'TV')?.isUsed; break;
                    case 'Keep social distance': 
                        let distanceKept = true;
                        npcs.forEach(npc => { if (Math.abs(player.x - npc.x) < 100) distanceKept = false; });
                        if(distanceKept) isComplete = true;
                        if(player.x > 750) isComplete = true;
                        break;
                    case 'Get groceries': isComplete = player.hasGroceries; break;
                    case 'Sanitize hands': isComplete = interactables.find(i => i.name === 'Sanitizer')?.isUsed; break;
                    case 'Pick up essentials': isComplete = interactables.find(i => i.name === 'Essentials')?.isCollected; break;
                    case 'Deliver to neighbor': isComplete = interactables.find(i => i.name === 'Neighbor Door')?.isUsed; break;
                    case 'Return home': isComplete = isPlayerNear(interactables.find(i => i.name === 'Home Door')); break;
                    case 'Isolate in room': isComplete = isPlayerNear(interactables.find(i => i.name === 'Bed')); break;
                    case 'Check temperature': isComplete = interactables.find(i => i.name === 'Thermometer')?.isUsed; break;
                    case 'Call helpline': isComplete = interactables.find(i => i.name === 'Phone')?.isUsed; break;
                }
                levelState.objectives[obj] = isComplete;
                if (isComplete) completedCount++;
            }

            if (completedCount === objectives.length) {
                endLevel(true);
            }
        }
        
        function isPlayerNear(item) {
            if (!item) return false;
            const interactionRange = 20;
            return player.x < item.x + item.width + interactionRange &&
                   player.x + player.width > item.x - interactionRange &&
                   player.y < item.y + item.height + interactionRange &&
                   player.y + player.height > item.y - interactionRange;
        }

        function handleInteractions() {
            if (!keys.interact) return;
            interactables.forEach(item => {
                if (isPlayerNear(item)) {
                    switch(item.name) {
                        case 'Sink': player.handsClean = true; break;
                        case 'Mask': if(!item.isCollected) { item.isCollected = true; player.hasMask = true; } break;
                        case 'TV': item.isUsed = true; break;
                        case 'Store': if (!player.hasGroceries) player.hasGroceries = true; break;
                        case 'Sanitizer': item.isUsed = true; player.handsClean = true; break;
                        case 'Essentials': if (!player.hasGroceries) { player.hasGroceries = true; item.isCollected = true; } break;
                        case 'Neighbor Door': if (player.hasGroceries) { item.isUsed = true; player.hasGroceries = false; } break;
                        case 'Thermometer': item.isUsed = true; break;
                        case 'Phone': item.isUsed = true; break;
                    }
                }
            });
            keys.interact = false;
        }

        function update() {
            if (!gameRunning) return;

            player.dx = 0; player.isCrouching = keys.crouch;
            if (keys.right) player.dx = player.speed;
            if (keys.left) player.dx = -player.speed;
            
            if (keys.jump && player.onGround) {
                player.dy = player.jumpStrength; player.onGround = false;
            }

            player.x += player.dx;
            player.dy += gravity; 
            player.y += player.dy;
            
            const currentHeight = player.isCrouching ? player.crouchHeight : player.height;
            let onAnyPlatform = false;
            interactables.filter(i => i.isPlatform).forEach(platform => {
                 if (player.x + player.width > platform.x && player.x < platform.x + platform.width &&
                    player.y + currentHeight >= platform.y && (player.y - player.dy) + currentHeight <= platform.y && player.dy >= 0) {
                        player.y = platform.y - currentHeight; player.dy = 0; player.onGround = true; onAnyPlatform = true;
                 }
            });

            if (player.y + currentHeight >= canvasHeight - floorHeight) {
                player.y = canvasHeight - floorHeight - currentHeight;
                player.dy = 0; player.onGround = true; onAnyPlatform = true;
            }
            if (!onAnyPlatform) { player.onGround = false; }

            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvasWidth) player.x = canvasWidth - player.width;

            // NPC movement and fail condition
            npcs.forEach(npc => {
                npc.x += npc.vx;
                if (npc.x < 0 || npc.x + npc.width > canvasWidth) npc.vx *= -1;
                
                if (isPlayerNear(npc)) {
                    endLevel(false, "You got too close to someone! Maintain social distance.");
                }
            });

            handleInteractions();
            checkObjectives();
        }

        function draw() {
            // --- Draw Background & Scene ---
            if (currentLevel === 1 || currentLevel === 4) { // Indoors
                 ctx.fillStyle = '#d1d5db'; ctx.fillRect(0, 0, canvasWidth, canvasHeight - floorHeight);
            } else { // Outdoors
                const skyGrad = ctx.createLinearGradient(0, 0, 0, canvasHeight);
                skyGrad.addColorStop(0, '#60a5fa'); skyGrad.addColorStop(1, '#bfdbfe');
                ctx.fillStyle = skyGrad; ctx.fillRect(0, 0, canvasWidth, canvasHeight);
            }

            ctx.fillStyle = '#7f8c8d'; // Floor / Ground
            ctx.fillRect(0, canvasHeight - floorHeight, canvasWidth, floorHeight);
            
            // --- Draw Interactables ---
            interactables.forEach(item => {
                switch(item.name) {
                    case 'Sink':
                        ctx.fillStyle = player.handsClean ? '#3b82f6' : '#9ca3af';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Mask':
                        if(!item.isCollected) {
                             ctx.fillStyle = '#3b82f6'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        }
                        break;
                    case 'TV':
                        ctx.fillStyle = '#374151'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        if(item.isUsed) {
                             ctx.fillStyle = '#10b981'; ctx.fillRect(item.x+10, item.y+10, item.width-20, item.height-20);
                        }
                        break;
                    case 'Store': case 'Neighbor Door': case 'Home Door':
                        ctx.fillStyle = '#f59e0b'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Sanitizer':
                        ctx.fillStyle = item.isUsed ? '#10b981' : '#f472b6';
                        ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Essentials':
                        if (!item.isCollected) {
                           ctx.fillStyle = '#facc15'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        }
                        break;
                    case 'Bed':
                        ctx.fillStyle = '#a78bfa'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Thermometer': case 'Phone':
                         ctx.fillStyle = item.isUsed ? '#10b981' : '#9ca3af';
                         ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                    case 'Crate1': case 'Crate2':
                         ctx.fillStyle = '#8d6e63'; ctx.fillRect(item.x, item.y, item.width, item.height);
                        break;
                }
                
                if (isPlayerNear(item) && !item.isGoal && !item.isPlatform) {
                    let hint = "[E]";
                    if(item.name === 'Neighbor Door' && !player.hasGroceries) hint = "Need Essentials!";
                    ctx.fillStyle = 'black'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'center';
                    ctx.fillText(hint, item.x + item.width / 2, item.y > 20 ? item.y - 10 : item.y + item.height + 20);
                }
            });
            
            // Draw NPCs
            npcs.forEach(npc => {
                ctx.fillStyle = '#f7d2a1'; ctx.fillRect(npc.x + 5, npc.y, npc.width - 10, 20);
                ctx.fillStyle = 'black'; ctx.fillRect(npc.x + 12, npc.y + 5, 4, 4); ctx.fillRect(npc.x + 24, npc.y + 5, 4, 4);
                ctx.fillStyle = '#e11d48'; ctx.fillRect(npc.x, npc.y + 20, npc.width, npc.height - 20);
            });

            if (gameRunning) { player.draw(); }
            
            drawUI();
        }

        function drawUI() {
            if (!gameRunning) return;
            const objectives = Object.keys(levelState.objectives);
            const boxWidth = 550;
            ctx.fillStyle = 'rgba(0,0,0,0.5)';
            ctx.fillRect(10, 10, boxWidth, 25 + objectives.length * 25);
            ctx.fillStyle = 'white'; ctx.font = "16px 'Press Start 2P'"; ctx.textAlign = 'left';
            ctx.fillText("Level " + currentLevel + " Objectives:", 20, 35);

            let i = 0;
            for (const [objective, completed] of Object.entries(levelState.objectives)) {
                ctx.fillStyle = completed ? '#48bb78' : '#e53e3e';
                ctx.fillText(`${completed ? '[X]' : '[ ]'} ${objective}`, 20, 60 + i * 25);
                i++;
            }

            ctx.fillStyle = 'white'; ctx.font = "14px 'Press Start 2P'"; ctx.textAlign = 'center';
            ctx.fillText("Move:A/D | Jump:W | Crouch:S | Interact:E", canvasWidth / 2, 30);
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }
        
        function endLevel(success, message) {
            gameRunning = false;
            if (success) {
                let successMessage = "";
                 switch(currentLevel) {
                    case 1: successMessage = "Good job! You've taken the first steps to stay safe at home."; break;
                    case 2: successMessage = "Excellent! You handled essential travel safely."; break;
                    case 3: successMessage = "Great work! Helping neighbors strengthens the community."; break;
                    case 4: successMessage = "You did the right thing! Proper quarantine protects everyone."; break;
                 }
                if (currentLevel < totalLevels) {
                    levelCompleteMessage.textContent = successMessage;
                    levelCompleteScreen.style.display = 'flex';
                } else {
                    gameOverMessage.textContent = successMessage + " You're a responsible citizen!";
                    gameOverScreen.style.display = 'flex';
                }
            } else {
                gameOverMessage.textContent = message || "A wrong choice can be risky. Let's try again!";
                gameOverScreen.style.display = 'flex';
            }
        }
        
        function startGame() {
            startScreen.style.display = 'none';
            levelCompleteScreen.style.display = 'none';
            gameOverScreen.style.display = 'none';
            levelSelectScreen.style.display = 'none';
            setupLevel(currentLevel);
            gameRunning = true;
        }

        function resizeCanvas() {
            const container = document.querySelector('.game-container');
            const aspectRatio = 16 / 9;
            let newWidth = container.clientWidth; let newHeight = container.clientHeight;
            if (newWidth / newHeight > aspectRatio) { newWidth = newHeight * aspectRatio; } else { newHeight = newWidth / aspectRatio; }
            canvas.width = 1024; canvas.height = 576;
            canvas.style.width = `${newWidth}px`; canvas.style.height = `${newHeight}px`;
            canvasWidth = canvas.width; canvasHeight = canvas.height;
            if (gameRunning) { setupLevel(currentLevel); }
        }
        
        // Exit game function
        function exitGame() {
            window.location.href = '/dashboard';
        }
        
        window.addEventListener('resize', resizeCanvas);
        window.addEventListener('keydown', keyDown);
        window.addEventListener('keyup', keyUp);

        // Add event listener for the exit button
        exitGameButton.addEventListener('click', exitGame);
        
        startButton.addEventListener('click', () => { currentLevel = 1; startGame(); });
        nextLevelButton.addEventListener('click', () => { currentLevel++; startGame(); });
        restartButton.addEventListener('click', () => { gameOverScreen.style.display = 'none'; levelSelectScreen.style.display = 'flex'; });

        document.querySelectorAll('.level-btn').forEach(button => {
            button.addEventListener('click', () => { currentLevel = parseInt(button.dataset.level); startGame(); });
        });

        resizeCanvas();
        draw();
        requestAnimationFrame(gameLoop);
    </script>
</body>
</html>